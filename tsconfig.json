{
  "compilerOptions": {
    "target": "ES2020", // 编译后的JavaScript版本
    "module": "commonjs", // 模块系统（Node.js常用commonjs）
    "strict": true, // 启用所有严格类型检查选项
    "outDir": "./dist", // 编译输出目录
    "rootDir": "./src", // 源码根目录
    "esModuleInterop": true // 允许import导入CommonJS模块
  },
  "include": ["src/**/*"], // 包含的文件/目录模式
  "exclude": ["node_modules"] // 排除的文件/目录模式
}
